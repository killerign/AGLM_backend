    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\node_modules\\nodemon\\bin\\nodemon.js"
        },
        {
            "name": "Launch with nodemon",
            "type": "node",
            "request": "launch",
            "port":5858,
            "address":"localhost",
            "restart":true,
            "program": "${workspaceRoot}/node_modules/nodemon/bin/nodemon.js",
            "args": ["${workspaceRoot}/app.js"],
            "runtimeArgs": ["--nolazy"]
          }
    ]
}